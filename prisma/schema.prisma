generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  name      String?
  password  String?
  image     String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  documents Document[]
}

model Document {
  id           String   @id @default(cuid())
  userId       String
  fileName     String
  filePath     String   // Path to the saved signed file (or base64 if small enough, but path is better)
  signerName   String
  letterNumber String?
  subject      String?
  signedAt     DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
